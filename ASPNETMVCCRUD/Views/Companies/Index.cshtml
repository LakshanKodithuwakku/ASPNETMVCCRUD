@model List<ASPNETMVCCRUD.Models.Domain.Company>

@{
}
<h1>Companies</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Address</th>
			<th>Salary</th>
			<th>Date Of Birth</th>
			<th>Department</th>
		</tr>
	</thead>
	<tbody>
			@foreach (var company in Model)
			{
				<tr>
					<td>@company.Id</td>
					<td>@company.Name</td>
					<td>@company.Address</td>
					<td>@company.ContactInfo.ToString()</td>
					<td>@company.NoOfEmployees.ToString()</td>
					<td><a href="Companies/View/@company.Id">View</a></td>
				</tr>
			}
	</tbody>
</table>
