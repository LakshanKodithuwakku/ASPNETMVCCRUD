@model ASPNETMVCCRUD.Models.AddCompanyViewModel

@{
}

<h1>Add Company</h1>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Contact Infomation</label>
        <input type="email" class="form-control" asp-for="ContactInfo">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">No Of Employees</label>
        <input type="number" class="form-control" asp-for="NoOfEmployees">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
